<!DOCTYPE html>
<html>
<head>
    <title>Chessboard Project</title>
</head>
<body>
    <script>
        // User Story 1: Function to create a label and append to body
        function print(data) {
            const label = document.createElement("label");
            label.textContent = data;
            document.body.appendChild(label);
        }

        // User Story 2: Function to create a break element (new line)
        function newLine() {
            const br = document.createElement("br");
            document.body.appendChild(br);
        }

        // User Story 3: Declare board_size
        const board_size = 8; // You can change this to any size you want

        // User Story 4: Create chessboard using the above functions
        for (let i = 0; i < board_size; i++) {
            for (let j = 0; j < board_size; j++) {
                if ((i + j) % 2 === 0) {
                    print("*");
                } else {
                    print("#");
                }
            }
            newLine(); // Move to next row
        }
    </script>
</body>
</html>
